import random

def squareroot(m,k,n) :
    temp = 0
    total = 0
    i = 0
    aver = 0
    
    if  m > k :
        temp = m
        m = k
        k = temp
    while i < n :
        num = random.randint(m,k)
        total = total + num
        i = i + 1
    aver = total / i
    print(aver*aver)
    
